[Unit]
Description=ScanSnap ix500 Button Polling Service

[Service]
Type=simple
ExecStart=%h/.local/bin/scan-button-poll
Restart=on-failure
RestartSec=5

# Environment for desktop notifications
Environment=DBUS_SESSION_BUS_ADDRESS=unix:path=/run/user/%U/bus
Environment=PATH=%h/.local/bin:/usr/local/bin:/usr/bin:/bin
# PAPERLESS_URL and PAPERLESS_TOKEN come from ~/.config/environment.d/paperless.conf

[Install]
WantedBy=default.target
